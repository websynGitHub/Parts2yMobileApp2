                                                    <local:FontAwesomeIconLabel.GestureRecognizers>
                                                        <TapGestureRecognizer 
                 Command="{Binding BindingContext.MoveToScanCmd,Source={x:Reference Name=POTagPage}}"
                                                          CommandParameter="{Binding .}"/>
                                                    </local:FontAwesomeIconLabel.GestureRecognizers>
                                                </local:FontAwesomeIconLabel>
                                            </StackLayout>-->
                                                    <!--</Grid>-->

                                                    <!--<StackLayout x:Name="arrowstack" Orientation="Vertical" Grid.Row="0" 
                                                        
                                                             Grid.Column="1" VerticalOptions="Center" HorizontalOptions="End">
                                                        --><!--<local:FontAwesomeIconLabel Text="{Binding Status_icon}" FontSize="30"  TextColor="#000000"  HorizontalOptions="Center" VerticalOptions="Center"/>-->
                                                        <!--<Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Source="greateric.png" Aspect="AspectFit" HeightRequest="35" WidthRequest="35" HorizontalOptions="Center" VerticalOptions="Center"></Image>--><!--
                                                        <local:FontAwesomeIconLabel Text="{x:Static local1:Icons.righticon}" 
                                                 FontSize="40" TextColor="#000000" HorizontalOptions="Center" 
                                                 IsVisible="{Binding BindingContext.IsRightArrowVisible,Source={x:Reference Name=POTagPage}}"
                                                 VerticalOptions="Center">
                                                            <local:FontAwesomeIconLabel.GestureRecognizers>
                                                                <TapGestureRecognizer 
                 Command="{Binding BindingContext.MoveToNextPageCmd,Source={x:Reference Name=POTagPage}}"
                                                          CommandParameter="{Binding .}"/>
                                                            </local:FontAwesomeIconLabel.GestureRecognizers>
                                                        </local:FontAwesomeIconLabel>

                                                        <local:FontAwesomeIconLabel 
                                                                                    Text="{Binding TagTaskStatusIcon}" FontSize="25"  TextColor="#000000" 
                                                                                    HorizontalOptions="Center" VerticalOptions="Center"/>

                                                    </StackLayout>-->
                                                </Grid>

                                                <StackLayout VerticalOptions="Start"
                                                      HorizontalOptions="FillAndExpand" Orientation="Horizontal">

                                                    <input:CheckBox HorizontalOptions="Start" Margin="0,0,25,0"
                                                                VerticalOptions="Center"
                                                                 IsChecked="{Binding IsChecked}"
                                                                CheckChanged="CheckBox_CheckedChanged"  
                                                                TextFontSize="18" Spacing="12" TextColor="Black" 
                                                                BorderColor="Black" />

                                                    <!--<CheckBox HorizontalOptions="Start" Margin="0,0,140,0"
                                                            CheckedChanged="CheckBox_CheckedChanged">

                                                <CheckBox.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding BindingContext.CheckBoxTapCmd,Source={x:Reference Name=POTagPage}}"
                                                          CommandParameter="{Binding .}"></TapGestureRecognizer>
                                                </CheckBox.GestureRecognizers>
                                                </CheckBox>-->



                                                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand"
                                                         >
                                                        <Frame Padding="3,2,3,2" Margin="0,5,10,8" CornerRadius="2" 
                                                        IsVisible="{Binding IsFilesVisible}" HasShadow="False">
                                                            <StackLayout Orientation="Horizontal">
                                                                <local:FontAwesomeIconLabel x:Name="file"
                                                           Text="{x:Static local1:Icons.FileAttachIc}"
                                                  TextColor="Black" FontSize="25"
                                                 HorizontalOptions="Start" VerticalOptions="Center">
                                                                </local:FontAwesomeIconLabel>
                                                                <Label Text="{Binding TagFilesCount}" HorizontalOptions="Start" TextColor="Black"
                                                       IsVisible="{Binding filecountVisible}" Style="{StaticResource LableWithMicroFont}"/>
                                                                <Image Source="tickb.png" IsVisible="{Binding fileTickVisible}"
                                                       HorizontalOptions="Start" HeightRequest="15" WidthRequest="12"/>
                                                            </StackLayout>
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer  Command="{Binding BindingContext.viewExistingFiles,Source={x:Reference Name=POTagPage}}"
                                                          CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>
                                                        </Frame>

                                                        <Frame Padding="3,2,3,2" Margin="0,5,10,8" CornerRadius="2" 
                                                       IsVisible="{Binding IsPhotosVisible}" HasShadow="False">
                                                            <StackLayout Orientation="Horizontal">
                                                                <local:FontAwesomeIconLabel x:Name="photoBU" Text="{x:Static local1:Icons.CameraIc}" 
                                                                                TextColor="Black" FontSize="25"
                                                                                HorizontalOptions="Start" VerticalOptions="Center"
                                                                                Opacity="{Binding imgCamOpacityB}">
                                                                </local:FontAwesomeIconLabel>
                                                                <Label  Text="{Binding TagBPhotoCount}" IsVisible="{Binding BPhotoCountVisible}"
                                                            HorizontalOptions="Start" Style="{StaticResource LableWithMicroFont}" TextColor="Black"/>
                                                                <Image Source="tickb.png" Opacity="{Binding imgTickOpacityB}" 
                                                       IsVisible="{Binding photoTickVisible}" HorizontalOptions="Start"
                                                       HeightRequest="15" WidthRequest="12"/>

                                                            </StackLayout>
                                                            <Frame.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding BindingContext.viewExistingBUPhotos,Source={x:Reference Name=POTagPage}}"
                                                          CommandParameter="{Binding .}"/>
                                                            </Frame.GestureRecognizers>
                                                        </Frame>

                                                        <Frame Padding="3,2,3,2" Margin="0,5,10,8" CornerRadius="2" 
                                                        IsVisible="{Binding IsPhotosVisible}" HasShadow="False">
                                                            <StackLayout Orientation="Horizontal">
                                                                <local:FontAwesomeIconLabel x:Name="photoAU" Text="{x:Static local1:Icons.CameraIc}" 
                                                 TextColor="Black" FontSize="25"
                                                 HorizontalOptions="Start" VerticalOptions="Center" Opacity="{Binding imgCamOpacityA}"
                                                 >
                                                                </local:FontAwesomeIconLabel>
                                                                <Label  Text="{Binding TagAPhotoCount}" IsVisible="{Binding APhotoCountVisible}"
                                                            HorizontalOptions="Start" Style="{StaticResource LableWithMicroFont}" TextColor="Black"/>
                                                                <Image Source="tickb.png" Opacity="{Binding imgtickOpacityA}" 
