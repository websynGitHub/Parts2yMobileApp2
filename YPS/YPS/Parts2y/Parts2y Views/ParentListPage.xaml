                                        </Label.GestureRecognizers>-->
                                    </Label>
                                    <!--<BoxView Style="{StaticResource StyleBoxView}" IsVisible="False" />-->
                                </StackLayout>
                            </Grid>
                        </StackLayout>
                    
                        <Grid Grid.Row="2" ColumnSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" 
                              BackgroundColor="White" Padding="0" RowSpacing="0" Margin="2,6,2,0 ">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
