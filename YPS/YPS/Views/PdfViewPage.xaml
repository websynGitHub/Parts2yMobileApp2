            </Image>
        </Grid>
    </NavigationPage.TitleView>-->
    <Grid RowSpacing="0" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        <Grid x:Name="headerpart" Grid.Row="0" Style="{StaticResource ToolbarNavGrid}" BackgroundColor="DarkGreen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <LblIcons:FontAwesomeIconLabel x:Name="Backchathide" Text="{x:Static StaticIcons:Icons.arrowLeft}" Grid.Column="0"
                                                  Style="{StaticResource LblIconStyle}" TextColor="#FFFFFF" HorizontalOptions="Start" 
                                                  VerticalOptions="Center" Margin="10,10,10,10">
                <LblIcons:FontAwesomeIconLabel.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BackTapped"/>
                </LblIcons:FontAwesomeIconLabel.GestureRecognizers>
            </LblIcons:FontAwesomeIconLabel>
            <Label Grid.Column="1" x:Name="setTitle" TextColor="White"
                   Style="{StaticResource LableWithMediumFont}"
                   Margin="8,20,0,20" HorizontalOptions="StartAndExpand" 
                                        VerticalOptions="CenterAndExpand"/>
            <LblIcons:FontAwesomeIconLabel Grid.Column="2" Text="{Static StaticIcons:Icons.HomeIc}" HorizontalOptions="End"
                                           VerticalOptions="Center" Margin="0,0,9,0"
                                           Style="{StaticResource LblIconStyle}" HorizontalTextAlignment="Start">
                <LblIcons:FontAwesomeIconLabel.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoToHome_Tapped"/>
                </LblIcons:FontAwesomeIconLabel.GestureRecognizers>
            </LblIcons:FontAwesomeIconLabel>
        </Grid>
        
        <pdfViewerSample:PdfView Grid.Row="1" x:Name="PdfDocView" VerticalOptions="FillAndExpand" />
    </Grid>
    
    <!--<Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
